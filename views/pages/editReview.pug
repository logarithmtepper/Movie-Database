include ../partials/header
h2 Edit your review for #{review.movie.title}

#addReviewDIV.container

form(method='POST', action='/reviews/edit/'+review._id)
  #form-group
    label(for='title')
      b Brief Review:   
    input#titleInput(type='text'  name='title' required='', value=review.title)
  #form-group
    label(for='rating')
      b Rating (0 to 10):   
    input#titleInput(type='text'  name='rating' required='', value=review.rating)
  #form-group
    label(for='body')
      b Full Review:
    br   
    | &nbsp; 
    textarea(name="full", value=review.full cols="40", rows="10" required='')
        |#{review.full}
    br
    button.btn.btn-primary(type='submit') Add Review